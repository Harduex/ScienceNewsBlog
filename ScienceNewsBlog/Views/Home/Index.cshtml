@model List<ScienceNewsBlog.Data.Models.Article>

@{
    ViewData["Title"] = "Home Page";
}

    <div class="text-center">
        @if (this.User.IsInRole("admin"))
        {
            <h1 class="display-4">Logged as admin</h1>
        }
        else
        {
            <h1 class="display-4">Science News Blog</h1>
        }
        <br />
    </div>

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @{
            var first = true;
        }
        @foreach (var item in Model)
        {
        <div class="carousel-item @(first?Html.Raw("active"):Html.Raw(""))">
            <img class="d-block w-100" src='data:image/jpeg;base64, @item.Picture' height="600" alt="@item.Title">
            <div class="carousel-caption d-none d-md-block">
                <h5 class="text-shadow">@item.Title</h5>
                <br />
                <a asp-controller="Articles" asp-action="Article" asp-route-id="@item.Id" class="btn btn-primary">Read more</a>
            </div>
        </div>
            first = false;
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
       data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button"
       data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
