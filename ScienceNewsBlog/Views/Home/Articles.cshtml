@model List<ScienceNewsBlog.Data.Models.Article>

@{
    ViewData["Title"] = "Articles";
}

<h1>Articles</h1>
<br />
<div class="container">
    @if (this.User.IsInRole("admin"))
    {
        <p>
            <a class="btn btn-success" asp-action="Add">Create New Article</a>
        </p>
    }
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card" style="width: 18rem;">
                    <img src="@item.PhotoUrl" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">
                            @(item.Content.Length > 100 ? (item.Content.Substring(0, 100))+"..." : item.Content)
                        </p>
                        <a asp-action="Article" asp-route-id="@item.Id" class="btn btn-primary">Go to article</a>

                        @if (this.User.IsInRole("admin"))
                        {
                            <br />
                            <br />
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>

                            <a onclick="getArticleToDelete('@item.Id', '@item.Title')" class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id" data-toggle="modal" data-target="#exampleModal">Delete</a>

                        }
                    </div>
                </div>
                <br />
            </div>

        }
    </div>

</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Are you sure you want to delete this article?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <span id="articleToDeleteTitle"></span>
                <span hidden id="articleToDeleteId"></span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button onclick="deleteArticle()" type="button" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>

<script>

    function deleteArticle() {
        var $id = $('#articleToDeleteId').html();

        window.location = "Delete/" + $id;
    }

    function getArticleToDelete(id, title) {

        var $title = $('#articleToDeleteTitle');
        var $id = $('#articleToDeleteId');

        $title.html(title);
        $id.html(id);
    }
</script>
