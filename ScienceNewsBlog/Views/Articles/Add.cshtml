@model ScienceNewsBlog.Data.Models.Article

@{
    ViewData["Title"] = "Add";
}

<h1>Create new article</h1>
<h3>@ViewData["Message"]</h3>
<hr />
<div class="row">
    <div class="col">
        <form asp-controller="Articles" asp-action="Add" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" name="title" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Picture" class="control-label"></label><br />
                <input asp-for="NewPicture" />
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control" rows="4" cols="50"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Publish" class="btn btn-success" />
                <a asp-controller="Articles" asp-action="Index" class="btn btn-danger">Back to articles</a>
            </div>
        </form>
    </div>
</div>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        branding: false,
        plugins: [
            "image paste table link code media"
        ]
    });
 </script>
