@{
    ViewData["Title"] = "Contact";
}

<h1>@ViewData["Title"]</h1>

<hr />
@model ScienceNewsBlog.Models.ContactFormModel

<div class="row">
    <div class="col">
        <form asp-controller="Contact" asp-action="Index" method="post">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Please enter your name:</label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Please enter your email:</label>
                <input type="text" asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label">Please enter your message:</label>
                <textarea asp-for="Message" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Send Message!" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        branding: false,
        plugins: [
            "image paste table link code media"
        ]
    });
</script>
